<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowReservationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Show reservation"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/lastDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Day"/>

    <Spinner
        android:id="@+id/chooseClassRoom"
        android:hint="Choose Class Room"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/Classroom_ID"/>

    <Button
        android:id="@+id/nextDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Day"/>

        </LinearLayout>

    <DatePicker
        android:id="@+id/chooseDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></DatePicker>

</LinearLayout>